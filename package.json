{
  "name": "music-player",
  "description": "A music player built with Electron and React",
  "version": "2.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/guillercp93/music-player.git"
  },
  "bugs": {
    "url": "https://github.com/guillercp93/music-player/issues"
  },
  "author": "Guillermo Castillo",
  "license": "Apache-2.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "vite": "vite",
    "build": "vite build",
    "preview": "vite preview --open ./public/index.html --outDir dist-renderer",
    "start": "electron .",
    "electron:build": "vite build && electron-builder",
    "format:lint": "prettier --write 'src/**/*.{ts,tsx}' && eslint . --fix"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss": "4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@tailwindcss/vite": "4.0.14",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "@vitejs/plugin-react": "4.3.4",
    "electron": "35.0.3",
    "electron-builder": "25.1.8",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-react": "7.37.4",
    "prettier": "3.5.3",
    "vite": "6.2.2",
    "vite-plugin-electron": "0.29.0"
  },
  "build": {
    "asar": false,
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "extraFiles": [],
      "extraResources": [],
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": false
    }
  }
}
